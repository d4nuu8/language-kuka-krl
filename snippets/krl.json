{
    "Module": {
        "prefix": "module",
        "body": [
            "${1:GLOBAL }DEF ${2:name}(${3:params})",
            "  $0",
            "END"
        ],
        "description": "Module"
    },
    "Function": {
        "prefix": "function",
        "body": [
            "${1:GLOBAL }DEFFCT ${2:type} ${3:name}(${4:params})",
            "  $0",
            "ENDFCT"
        ],
        "description": "Function"
    },
    "For loop": {
        "prefix": "for",
        "body": [
            "FOR ${1:counter}=${2:start} TO ${3:end}${4: STEP step}",
            "  $0",
            "ENDFOR"
        ],
        "description": "For Loop"
    },
    "While loop": {
        "prefix": "while",
        "body": [
            "WHILE (${1:condition})",
            "  $0",
            "ENDWHILE"
        ],
        "description": "While Loop"
    },
    "Loop": {
        "prefix": "loop",
        "body": [
            "LOOP",
            "  $0",
            "ENDLOOP"
        ],
        "description": "Loop"
    },
    "Exit": {
        "prefix": "exit",
        "body" : [
            "EXIT"
        ],
        "description": "Exit"
    },
    "If statement": {
        "prefix": "if",
        "body": [
            "IF (${1:condition}) THEN",
            "  $0",
            "ENDIF"
        ],
        "description": "If Statement"
    },
    "Switch statement": {
        "prefix": "switch",
        "body": [
            "SWITCH (${1:variable})",
            "CASE ${2:switch}",
            "  $0",
            "DEFAULT",
            "ENDSWITCH"
        ],
        "description": "Switch Statement"
    },
    "Interrupt declaration": {
        "prefix": "interrupt",
        "body": [
            "${1:GLOBAL }INTERRUPT DECL ${2:priority} WHEN ${3:trigger} DO ${4:event}"
        ],
        "description": "Interrupt declaration"
    },
    "Trigger when distance": {
        "prefix": "trigger when distance",
        "body": [
            "TRIGGER WHEN DISTANCE=${1:position} DELAY=${2:delay} DO ${3:event}${4: PRIO=-1}"
        ],
        "description": "Trigger when distance"
    },
    "Trigger when path": {
        "prefix": "trigger when path",
        "body": [
            "TRIGGER WHEN PATH=${1:distance} ${2:ONSTART} DELAY=${3:delay} DO ${4:event}${5: PRIO=-1}"
        ],
        "description": "Trigger when path"
    },
    "Global E6AXIS positions": {
        "prefix": "global E6",
        "body": [
            "DECL GLOBAL E6AXIS X${1:name}={A1 ${2:value},A2 ${3:value},A3 ${4:value},A4 ${5:value},A5 ${6:value},A6 ${7:value},E1 ${8:value},E2 ${9:value},E3 ${10:value},E4 ${11:value},E5 ${12:value},E6 ${13:value}}"
        ],
        "description": "Global E6AXIS Position"
    },
    "Program Stamp": {
        "prefix": "program stamp",
        "body": [
            ";********************************",
            ";Date: $CURRENT_DATE.$CURRENT_MONTH.$CURRENT_YEAR",
            ";Programmer: ${1:name}",
            ";Description: ${2:description of program}",
            ";********************************",
            "$0"
        ],
        "description": "Inserts Information Template"
    }
}